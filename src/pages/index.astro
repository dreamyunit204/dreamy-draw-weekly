---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';

const posts = (await getCollection('posts')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
const base = import.meta.env.BASE_URL;
---

<Base title="Archive">
  <h1 class="page-title">The Dreamy Draw Weekly</h1>
  <p class="page-subtitle">Sunday recaps from the lab â€” networks, narratives, and numbers.</p>

  <ul class="post-list">
    {posts.map((post) => (
      <li>
        <a href={`${base}posts/${post.id}/`}>
          <span class="post-date">{post.data.date}</span>
          <div class="post-title">{post.data.title}</div>
          {post.data.description && <div class="post-desc">{post.data.description}</div>}
          {post.data.tags?.length > 0 && (
            <div style="margin-top:0.5rem;display:flex;gap:0.35rem;flex-wrap:wrap;">
              {post.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
            </div>
          )}
        </a>
      </li>
    ))}
  </ul>

  {posts.length === 0 && (
    <p style="color:var(--text-muted);font-style:italic;">No issues published yet. Check back Sunday!</p>
  )}
</Base>
